---
interface Props {
	title: string;
  id: string;
}

const { title, id } = Astro.props; 
---
<section id={id} class="flex flex-col justify-center px-6 bg-light dark:bg-dark text-black dark:text-white size-full">
  <div class="h-20 md:h-24 w-full"></div>
  <div class="flex flex-col items-center justify-center w-full m-auto max-w-[420px] md:max-w-[1440px]">
    {
      title && <h2 class="text-3xl md:text-5xl font-semibold mb-6 md:mb-10">{title}</h2>
    }
    <slot />
  </div>
</section>