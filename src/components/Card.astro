---
interface Props {
  name: string;
	description: string;
  image: string;
  url: string;
  repository: string;
  tecnologies: string [];
}

const { name, description, image, url, repository, tecnologies} = Astro.props; 
var col;

if (url && repository) {
  col = 2;
} else if (url) {
  col = 1;
} else if (repository) {
  col = 1;
} else {
col = 0;
}

---
<div class="flex flex-col justify-center rounded-2xl bg-light dark:bg-darkOne p-8 md:p-16 gap-y-5 shadow-lg w-full max-w-[420px] md:max-w-[520px] lg:max-w-[820px]">
  <img src={image} alt=`${name} Photo`>

  <h3 class="text-2xl md:text-3xl font-bold text-center">{name}</h3>

  <p class="text-justify dark:text-grayLight text-dark md:text-lg">{description}</p>

  <ul class="flex flex-wrap gap-2 justify-center items-center">
    {
      tecnologies.map((item) =>{
        return <li class="flex text-sm md:text-md items-center px-3 py-1 bg-whiteAlpha dark:bg-white/10 rounded-full h-8">{item}</li>
      })
    }
  </ul>

    { (url || repository) &&
      <div class=`grid grid-cols-${col} justify-stretch gap-x-4 md:gap-x-6 text-sm font-semibold text-lg`>
      {
        url && <a href={url} target="_blank"><button 
        class="flex items-center justify-center h-10 w-full rounded-xl bg-purpleDark dark:bg-purpleLight shadow-md
        shadow-purpleDark dark:shadow-white/30 text-light dark:text-dark"
        >Visit</button></a>
      }
      {
        repository && <a href={repository}  target="_blank"><button
        class="flex items-center justify-center h-10 w-full rounded-xl bg-whiteAlpha dark:bg-white/10
        shadow-md text-dark dark:text-white gap-x-2"
        ><ion-icon name="logo-github"></ion-icon>
          <span>Source code</span></button></a>
      }
      </div>
    }
</div>